---
import FeatureCard from '../components/cards/FeatureCard.astro';
import Container from '../components/Container.astro';
import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/heros/HomeHeroSection.astro';
import homeContent from '../../public/cms/home.json';
import CustomerQuoteSection from '../components/sections/CustomerQuoteSection.astro';
import StickyTextImageSection from '../components/sections/StickyTextImageSection.astro';
import Button from '../components/buttons/Button.astro';
import CtaGeneral from '../components/CtaGeneral.astro';
import CtaNewClients from '../components/CtaNewClients.astro';

const seo = {
	title: 'Empowered Healing Counseling - Meaghan Trezza, LMHC',
	description: 'Empowered Healing Counseling is a private practice Tacoma Washington, specializing in depression, anxiety, and trauma. Empowered Healing Counseling - Meaghan Trezza, LMHC',
};

---

<Layout seo={seo}>
	<HomeHeroSection />

	<CustomerQuoteSection
		quoteText={homeContent.quote}
		customerName={homeContent.quoteAuthor}
	/>

	<StickyTextImageSection reversed>
		<picture slot="image-container">
			<img
				width="800"
				height="800"
				id="about-me-home"
				src="/assets/images/home-portrait.webp"
				alt="Empowered Healing Counseling Depression Anxiety Therapy"
                />
		</picture>
		<div slot="text-container" class="intro-content">
			<h2 class="intro-title">{homeContent.introTitle}</h2>
			<div class="intro-description">
				{homeContent.introDescription.split('\n\n').map(paragraph => 
					<p>{paragraph}</p>
				)}
			</div>
			<div class="intro-button">
				<Button href="/about">About Me</Button>
			</div>
		</div>
	</StickyTextImageSection>

    <CtaNewClients />

    <Container>
        <div class="services-section">
            <div class="service-item">
                <div class="service-content">
                    <h3>Telehealth Counseling</h3>
                    <div class="service-description">
                        {homeContent.telehealth.split('\n\n').map(paragraph => 
                            <p>{paragraph}</p>
                        )}
                    </div>
                </div>
            </div>

            <div class="service-item">
                <div class="service-content">
                    <h3>In-Person Counseling</h3>
                    <div class="service-description">
                        {homeContent.inPerson.split('\n\n').map(paragraph => 
                            <p>{paragraph}</p>
                        )}
                    </div>
                </div>
            </div>
        </div>
    </Container>

	<Container>
		<section class="feature-card__section">
			<div class="explore-header">
				<h2 class="explore-title">Explore Services</h2>
				<p class="explore-subtitle">Learn more about my approach to healing and wellness</p>
			</div>
			<div class="feature-card__grid">
				<FeatureCard
					href="/rates-and-insurance"
					title="Rates & Insurance"
					imgSrc="/assets/images/rates-and-insurance-home"
				/>
				<FeatureCard
					href="/somatic-experiencing"
					title="Somatic Experiencing"
					imgSrc="/assets/images/somatic-experiencing-home"
				/>
				<FeatureCard
					href="/play-therapy"
					title="Play Therapy"
					imgSrc="/assets/images/play-therapy-hero"
				/>
				<FeatureCard
					href="/couples-counseling"
					title="Couples Counseling"
					imgSrc="/assets/images/couples-counseling-hero"
				/>
                <FeatureCard
					href="/resources"
					title="Resources"
					imgSrc="/assets/images/resources-home"
				/>
                <FeatureCard
					href="/about"
					title="About Me"
					imgSrc="/assets/images/about-home"
				/>
			</div>
		</section>
	</Container>

	<CtaGeneral />
</Layout>

<style>
	/* Intro Section Styles */
	.intro-content {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.intro-title {
		font-size: 2.25rem;
		font-weight: 600;
		color: var(--theme-primary);
		margin: 0;
		line-height: 1.2;
	}

	.intro-description {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.intro-description p {
		margin: 0;
		line-height: 1.7;
		font-size: 1.1rem;
		color: var(--theme-on-surface-1);
	}

	.intro-button {
		margin-top: 1rem;
	}

	/* Services Section Styles */
	.services-section {
		display: grid;
		grid-template-columns: 1fr;
		gap: 3rem;
		margin: 4rem 0;
	}

	.service-item {
		padding: 2.5rem;
		background-color: var(--theme-surface-1);
		border-radius: var(--theme-shape-radius);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
		transition: all 0.3s ease;
		border-left: 4px solid var(--theme-primary);
	}

	.service-item:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
		border-left-color: var(--theme-primary);
	}

	.service-content {
		width: 100%;
	}

	.service-content h3 {
		margin: 0 0 1rem 0;
		font-size: 1.5rem;
		font-weight: 600;
		color: var(--theme-primary);
	}

	.service-description {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.service-description p {
		margin: 0;
		line-height: 1.6;
		color: var(--theme-on-surface-1);
	}

	/* Feature Cards Section Styles */
	.feature-card__section {
		margin: 4rem auto;
		max-width: var(--container-max-width-narrow);
	}

	.explore-header {
		text-align: center;
		margin-bottom: 3.5rem;
	}

	.explore-title {
		font-size: clamp(2rem, 4vw, 2.75rem);
		font-weight: 700;
		color: var(--theme-primary);
		margin: 0 0 1rem 0;
		letter-spacing: -0.02em;
	}

	.explore-subtitle {
		font-size: 1.25rem;
		color: var(--theme-on-surface-1);
		opacity: 0.85;
		margin: 0;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
		line-height: 1.6;
	}

	.feature-card__grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 2.5rem;
	}

	/* Responsive Design */
	@media (max-width: 1024px) {
		.services-section {
			gap: 2rem;
		}
	}

	@media (max-width: 768px) {
		.intro-title {
			font-size: 1.875rem;
		}

		.intro-description p {
			font-size: 1rem;
		}

		.intro-button {
			display: flex;
			justify-content: center;
		}

		.services-section {
			gap: 1.5rem;
			margin: 2rem 0;
		}

		.service-item {
			flex-direction: column;
			text-align: left;
			padding: 2rem;
		}

		.explore-title {
			font-size: 2rem;
		}

		.explore-subtitle {
			font-size: 1.1rem;
		}

		.feature-card__grid {
			grid-template-columns: 1fr;
		}

		.feature-card__section {
			margin: var(--section-margin) auto;
			margin-left: 0;
			margin-right: 0;
		}
	}

	@media (max-width: 480px) {
		.service-item {
			padding: 1rem;
		}

		.service-icon {
			width: 56px;
			height: 56px;
		}

		.service-content h3 {
			font-size: 1.25rem;
		}
	}
</style>
