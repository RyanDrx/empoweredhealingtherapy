---
import ContactForm from '../components/forms/ContactForm.astro';
import Layout from '../layouts/Page.astro';
import Container from '../components/Container.astro';
import ContactHero from '../components/ContactHero.astro';

const seo = {
	title: 'Contact | Empowered Healing Counseling - Meaghan Trezza, LMHC',
	description: 'Contact Page for Empowered Healing Counseling, Meaghan Trezza, LMHC. Telehealth counseling services.',
};
---

<Layout {seo}>
	<Container>
		<section class="contact-hero__section">
			<ContactHero />
			<div class="col-2__container">
				<ContactForm />
			</div>
		</section>
	</Container>
</Layout>

<style>
	.contact-hero__section {
		margin: var(--section-margin) auto;
		display: grid;
		grid-template-columns: 1fr 1fr;
		min-height: calc(90vh - var(--navbar-height));
		gap: 3rem;
	}

	.col-2__container {
		display: flex;
		flex-direction: column;
		justify-content: center;
	}
	@media (max-width: 768px) {
		.contact-hero__section {
			grid-template-columns: 1fr;
		}
	}
</style>
