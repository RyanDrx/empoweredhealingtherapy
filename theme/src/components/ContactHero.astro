<style>
	.email {
		text-decoration: none;
		color: var(--theme-text-1);
		font-size: 0.7rem;
	}

	[astro-icon] {
		height: 1rem;
		transform: translateY(3px);
	}

	.contact-hero__text-section {
		padding: 2rem;
		display: flex;
