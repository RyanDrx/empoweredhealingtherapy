---
import Container from '../Container.astro';
import YouTubeEmbed from '../core/YouTubeEmbed.astro';

const {url, rounded, hidden} = Astro.props;
---

<Container hidden={hidden}>
  <section class="youtube-embed__section">
    <YouTubeEmbed url={url} rounded={rounded} />
  </section>
</Container>

<style>
 .youtube-embed__section {
   margin: var(--section-margin) auto;
 }
</style>