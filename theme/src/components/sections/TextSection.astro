---
import Container from '../Container.astro';

const { narrow } = Astro.props;
---

<Container {narrow}>
	<section class="text__section">
		<slot />
	</section>
</Container>

<style>
	.text__section {
		margin: var(--section-margin) auto;
		margin-left: 2rem;
		margin-right: 2rem;
	}

	@media (max-width: 768px) {
		.text__section {
			margin-left: 0;
			margin-right: 0;
		}
	}
</style>
