---
import Container from '../Container.astro';

const { narrow, class: className } = Astro.props;
---

<Container {narrow}>
	<section class:list={['text__section', className]}>
		<slot />
	</section>
</Container>

<style>
	.text__section {
		margin: var(--section-margin) auto;
		margin-left: 2rem;
		margin-right: 2rem;
		opacity: 0;
		transform: translateY(20px);
		animation: fadeInUp 0.8s ease-out forwards;
	}

	@keyframes fadeInUp {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.text__section h1,
	.text__section h2,
	.text__section h3 {
		color: var(--theme-primary);
		font-weight: 600;
		line-height: 1.3;
		margin-bottom: 1.5rem;
	}

	.text__section h1 {
		font-size: 2.5rem;
	}

	.text__section h2 {
		font-size: 2rem;
		margin-top: 2.5rem;
	}

	.text__section h3 {
		font-size: 1.5rem;
		margin-top: 2rem;
	}

	.text__section p {
		line-height: 1.7;
		font-size: 1.1rem;
		color: var(--theme-on-surface-1);
		margin-bottom: 1.5rem;
	}

	.text__section ul,
	.text__section ol {
		margin: 2rem 0;
		padding-left: 2rem;
		list-style: none;
	}

	.text__section li {
		line-height: 1.7;
		color: var(--theme-on-surface-1);
		margin-bottom: 0.75rem;
		font-size: 1.1rem;
		position: relative;
		padding-left: 2.5rem;
		opacity: 0;
		transform: translateX(-10px);
		animation: slideInLeft 0.6s ease-out forwards;
	}

	.text__section li:nth-child(1) { animation-delay: 0.2s; }
	.text__section li:nth-child(2) { animation-delay: 0.3s; }
	.text__section li:nth-child(3) { animation-delay: 0.4s; }
	.text__section li:nth-child(4) { animation-delay: 0.5s; }
	.text__section li:nth-child(5) { animation-delay: 0.6s; }
	.text__section li:nth-child(6) { animation-delay: 0.7s; }
	.text__section li:nth-child(7) { animation-delay: 0.8s; }
	.text__section li:nth-child(8) { animation-delay: 0.9s; }
	.text__section li:nth-child(9) { animation-delay: 1.0s; }
	.text__section li:nth-child(10) { animation-delay: 1.1s; }

	@keyframes slideInLeft {
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	.text__section li::before {
		content: "â€¢";
		color: var(--theme-primary);
		font-weight: bold;
		position: absolute;
		left: 1rem;
		top: 0;
		font-size: 1.2em;
	}

	@media (max-width: 768px) {
		.text__section {
			margin-left: 0;
			margin-right: 0;
		}

		.text__section h1 {
			font-size: 2rem;
		}

		.text__section h2 {
			font-size: 1.75rem;
		}

		.text__section h3 {
			font-size: 1.375rem;
		}

		.text__section p,
		.text__section li {
			font-size: 1rem;
		}
	}
</style>
