---
import { Image } from '@astrojs/image/components';
---

<Image
	class="ehc-logo"
	width={300}
	height={175}
	src="./assets/images/EmpoweredHealingLogo.png"
	alt="EHC Logo"
/>

<style>
	.ehc-logo {
		width: fit-content;
		height: 6.5rem;
		margin: 0;
		font-family: var(--theme-font-family-serif);
		font-size: var(--font-size-md);
		color: inherit;
	}
	.ehc-logo:hover {
		text-decoration: underline;
		cursor: pointer;
	}
</style>
