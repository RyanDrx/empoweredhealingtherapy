---
const { href, imgSrc, title } = Astro.props;
---

<div class="feature-card">
	<a class="feature-card__link" href={href}>
		<div class="feature-card__image-wrapper">
			<img
				width="702"
				height="527"
				class="feature-card__img"
				src={`${imgSrc}.webp`}
				alt={title}
				loading="lazy"
				decoding="async"
			/>
			<div class="feature-card__overlay"></div>
		</div>
		<div class="feature-card__content">
			<h3 class="feature-card__title">{title}</h3>
			<span class="feature-card__cta">Learn More â†’</span>
		</div>
	</a>
</div>

<style>
	.feature-card {
		background-color: var(--theme-surface-1);
		color: var(--theme-on-surface-1);
		border-radius: var(--theme-shape-radius);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
		overflow: hidden;
		transition: all 0.3s ease;
		position: relative;
		height: 100%;
		display: flex;
		flex-direction: column;
	}

	.feature-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
	}

	.feature-card__link {
		display: flex;
		flex-direction: column;
		height: 100%;
		text-decoration: none;
		color: inherit;
	}

	.feature-card__image-wrapper {
		position: relative;
		overflow: hidden;
		height: 240px;
		flex-shrink: 0;
		background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.feature-card__img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
		transition: transform 0.4s ease;
		/* Improve low-res image appearance */
		image-rendering: -webkit-optimize-contrast;
		image-rendering: crisp-edges;
		filter: contrast(1.05) saturate(1.1) brightness(1.02);
		backface-visibility: hidden;
		transform: translateZ(0);
	}

	.feature-card:hover .feature-card__img {
		transform: scale(1.03);
		filter: contrast(1.08) saturate(1.15) brightness(1.05);
	}

	.feature-card__overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(
			to bottom,
			rgba(0, 0, 0, 0) 0%,
			rgba(0, 0, 0, 0.15) 100%
		);
		opacity: 0;
		transition: opacity 0.3s ease;
		pointer-events: none;
	}

	.feature-card:hover .feature-card__overlay {
		opacity: 1;
	}

	.feature-card__content {
		padding: 1.5rem;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		flex-grow: 1;
		text-align: center;
	}

	.feature-card__title {
		font-family: var(--theme-font-family-serif);
		font-size: 1.25rem;
		font-weight: 600;
		margin: 0 0 1rem 0;
		line-height: 1.3;
		color: var(--theme-primary);
	}

	.feature-card__cta {
		font-size: 0.9rem;
		font-weight: 500;
		color: var(--theme-primary);
		opacity: 0.8;
		transition: opacity 0.3s ease;
		margin-top: auto;
	}

	.feature-card:hover .feature-card__cta {
		opacity: 1;
	}

	/* Subtle animation for better UX */
	@media (prefers-reduced-motion: no-preference) {
		.feature-card {
			transform: translateY(0);
		}
	}

	/* Ensure accessibility */
	.feature-card__link:focus {
		outline: 2px solid var(--theme-primary);
		outline-offset: 2px;
	}

	@media (max-width: 768px) {
		.feature-card__image-wrapper {
			height: 200px;
		}
		
		.feature-card__content {
			padding: 1.25rem;
		}
		
		.feature-card__title {
			font-size: 1.1rem;
		}
	}
</style>
