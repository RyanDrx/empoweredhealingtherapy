---
const { href, imgSrc, title } = Astro.props;
---

<div class="feature-card">
	<a class="feature-card__link" href={href}>
		<div class="feature-card__image-wrapper">
			<img
				width="702"
				height="527"
				class="feature-card__img"
				src={`${imgSrc}.webp`}
				alt={title}
				loading="lazy"
				decoding="async"
			/>
			<div class="feature-card__overlay"></div>
		</div>
		<div class="feature-card__content">
			<h3 class="feature-card__title">{title}</h3>
			<span class="feature-card__cta">Learn More â†’</span>
		</div>
	</a>
</div>

<style>
	.feature-card {
		background-color: var(--theme-surface-1);
		color: var(--theme-on-surface-1);
		border-radius: var(--theme-shape-radius);
		overflow: hidden;
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		position: relative;
		height: 100%;
		display: flex;
		flex-direction: column;
        border: 1px solid rgba(0,0,0,0.05);
        min-height: 22rem;
	}

	.feature-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
	}

	.feature-card__link {
		display: flex;
		flex-direction: column;
		height: 100%;
		text-decoration: none;
		color: inherit;
	}

	.feature-card__image-wrapper {
		position: relative;
		height: 15rem;
		overflow: hidden;
		background-color: var(--theme-surface-2);
		z-index: 0;
        flex-shrink: 0;
	}

	.feature-card__img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
		transition: transform 0.7s cubic-bezier(0.2, 0.8, 0.2, 1);
        will-change: transform;
		opacity: 1;
	}

	.feature-card:hover .feature-card__img {
		transform: scale(1.05);
	}

	.feature-card__overlay {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 50%;
		background: linear-gradient(
			to bottom,
			transparent 0%,
			rgba(242, 242, 242, 0.8) 70%,
			rgb(242, 242, 242) 100%
		);
		opacity: 1;
		pointer-events: none;
		z-index: 1;
	}

	.feature-card__content {
		padding: 2rem 1.5rem 1.5rem;
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		flex-grow: 1;
		text-align: left;
		position: relative;
		z-index: 2;
		background: var(--theme-surface-1);
	}

	.feature-card__title {
		font-family: var(--theme-font-family-serif);
		font-size: 1.35rem;
		font-weight: 600;
		margin: 0 0 0.5rem 0;
		line-height: 1.2;
		color: var(--theme-primary);
        transition: color 0.3s ease;
	}
    
    .feature-card:hover .feature-card__title {
        color: var(--theme-primary-hover);
    }

	.feature-card__cta {
		font-size: 0.95rem;
		font-weight: 600;
		color: var(--theme-on-surface-1);
		opacity: 0.7;
		transition: all 0.3s ease;
		margin-top: auto;
        display: flex;
        align-items: center;
        gap: 0.5rem;
	}

	.feature-card:hover .feature-card__cta {
		opacity: 1;
        color: var(--theme-primary);
        transform: translateX(4px);
	}

	/* Ensure accessibility */
	.feature-card__link:focus {
		outline: 2px solid var(--theme-primary);
		outline-offset: 2px;
	}

	@media (max-width: 768px) {
		.feature-card__content {
			padding: 1.5rem;
		}
		
		.feature-card__title {
			font-size: 1.25rem;
		}
	}
</style>
